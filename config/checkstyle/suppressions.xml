<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
        "-//Checkstyle//DTD SuppressionFilter Configuration 1.0//EN"
        "https://checkstyle.org/dtds/suppressions_1_0.dtd">

<suppressions>
    <!-- Allow missing Javadoc in /src/test/java -->
    <suppress checks="MissingJavadocMethod" files="src[/\\]test[/\\]java"/>

    <!--
        Suppress errors for files that came with the template project. These files will be removed later, so adding
        Javadoc to them is a waste of time.
    -->
    <suppress checks="JavadocMethod" files="Config.java"/>
    <suppress checks="JavadocMethod|MissingJavadocMethod" files="Main.java"/>
    <suppress checks="JavadocMethod|MissingJavadocMethod" files="MainCtrl.java"/>
    <suppress checks="JavadocMethod|MissingJavadocMethod" files="MyFXML.java"/>
    <suppress checks="JavadocMethod" files="MyModule.java"/>
    <suppress checks="JavadocMethod" files="SomeController.java"/>
</suppressions>
